<body>

  <div id="menu">
    <label>Redirect link:</label><br>
    <input type="text" id="linkInput" placeholder="https://example.com"><br>
    <button id="saveBtn">Save Link</button>
    <hr>
    <button id="osuBtn">ðŸŽµ Play Web Osu Mania</button>
    <button id="clusterBtn">ðŸ¦– Play Cluster Rush</button>
    <button id="openLinkBtn">âž¡ Go to Saved Link</button>
  </div>

  <script>
    const linkInput = document.getElementById("linkInput");
    const saveBtn = document.getElementById("saveBtn");
    const osuBtn = document.getElementById("osuBtn");
    const clusterBtn = document.getElementById("clusterBtn");
    const openLinkBtn = document.getElementById("openLinkBtn");

    // Load saved redirect link
    linkInput.value = localStorage.getItem("redirectLink") || "https://classroom.google.com/h";

    saveBtn.onclick = () => {
      const link = linkInput.value.trim();
      if (link) {
        localStorage.setItem("redirectLink", link);
        alert("âœ… Link saved!");
      }
    };

    osuBtn.onclick = () => {
      window.open("https://kingnoobisw.github.io/WebOsuMania/", "_blank");
    };

    clusterBtn.onclick = () => {
      window.open("https://swordslasher.com/games/cluster-rush/game.html", "_blank");
    };

    openLinkBtn.onclick = () => {
      const link = localStorage.getItem("redirectLink") || "https://classroom.google.com/h";
      window.open(link, "_blank");
    };

    // Redirect key
    document.addEventListener("keydown", function(event) {
      if (event.key === ">") {
        const link = localStorage.getItem("redirectLink") || "https://classroom.google.com/h";
        window.open(link, "_blank");
      }
    });
  </script>

</body>

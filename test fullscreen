  <meta charset="utf-8">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title>Cluster Rush + Web Osu Mania Menu</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      overflow: hidden;
      height: 100%;
      background: #111;
      font-family: sans-serif;
    }

    .game-container {
      position: relative;
      width: 100vw;
      height: 100vh;
    }

    .game-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
      z-index: 1;
      pointer-events: auto; /* game receives clicks where menu isnâ€™t */
    }

    #topButtons {
      position: absolute;
      top: 10px;
      left: 10px;
      z-index: 10;
      display: flex;
      gap: 10px;
      pointer-events: auto;
    }

    #topButtons button {
      background: #333;
      color: #fff;
      border: none;
      border-radius: 6px;
      padding: 6px 10px;
      cursor: pointer;
      font-weight: bold;
    }

    #menu {
      position: absolute;
      top: 60px;
      left: 10px;
      z-index: 11;
      background: rgba(34, 34, 34, 0.85); /* semi-transparent */
      border: 1px solid #555;
      border-radius: 6px;
      padding: 10px;
      display: none;
      pointer-events: auto;
      cursor: move; /* draggable hint */
    }

    #menu input {
      width: 220px;
      padding: 4px;
      border-radius: 4px;
      border: 1px solid #555;
      background: #111;
      color: #fff;
    }

    #menu button {
      margin-top: 6px;

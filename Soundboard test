<body>

  <!-- --- MENU BUTTON + DROPDOWN --- -->
  <div id="topButtons">
    <button id="menuBtn">â˜° Menu</button>
  </div>

  <div id="menu">
    <label>Redirect link:</label><br>
    <input type="text" id="linkInput" placeholder="https://example.com"><br>
    <button id="saveBtn">Save Link</button>
    <hr>
    <button id="osuBtn">ðŸŽµ Play Web Osu Mania</button>
    <button id="clusterBtn">ðŸ¦– Play Cluster Rush</button>
    <button id="coolmathBtn">ðŸ§® Play Coolmath Games</button>
    <button id="openLinkBtn">âž¡ Go to Saved Link</button>
  </div>

  <!-- --- Iframe for games --- -->
  <iframe id="gameFrame" src=""></iframe>

  <script>
    const menuBtn = document.getElementById("menuBtn");
    const menu = document.getElementById("menu");
    const linkInput = document.getElementById("linkInput");
    const saveBtn = document.getElementById("saveBtn");
    const osuBtn = document.getElementById("osuBtn");
    const clusterBtn = document.getElementById("clusterBtn");
    const coolmathBtn = document.getElementById("coolmathBtn");
    const openLinkBtn = document.getElementById("openLinkBtn");
    const gameFrame = document.getElementById("gameFrame");

    // Load saved redirect link
    linkInput.value = localStorage.getItem("redirectLink") || "https://classroom.google.com/h";

    // Toggle menu dropdown
    menuBtn.onclick = () => {
      menu.style.display = (menu.style.display === "none" || menu.style.display === "") ? "block" : "none";
    };

    saveBtn.onclick = () => {
      const link = linkInput.value.trim();
      if (link) {
        localStorage.setItem("redirectLink", link);
        alert("âœ… Link saved!");
        menu.style.display = "none";
      }
    };

    // Load games in the iframe
    osuBtn.onclick = () => {
      gameFrame.src = "https://kingnoobisw.github.io/WebOsuMania/?v=" + new Date().getTime();
      menu.style.display = "none";
    };

    clusterBtn.onclick = () => {
      gameFrame.src = "https://swordslasher.com/games/cluster-rush/game.html?v=" + new Date().getTime();
      menu.style.display = "none";
    };

    coolmathBtn.onclick = () => {
      gameFrame.src = "https://www.coolmathgames.com/?v=" + new Date().getTime();
      menu.style.display = "none";
    };

    openLinkBtn.onclick = () => {
      const link = localStorage.getItem("redirectLink") || "https://classroom.google.com/h";
      gameFrame.src = link + "?v=" + new Date().getTime();
      menu.style.display = "none";
    };

    // Redirect key
    document.addEventListener("keydown", function(event) {
      if (event.key === ">") {
        const link = localStorage.getItem("redirectLink") || "https://classroom.google.com/h";
        gameFrame.src = link + "?v=" + new Date().getTime();
      }
    });
  </script>
</body>

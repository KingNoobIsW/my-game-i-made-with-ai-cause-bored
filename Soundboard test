<!DOCTYPE html>
<html lang="en-us">
<head>
  <meta charset="utf-8">
  <title>Game Menu</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      background: #111;
      font-family: sans-serif;
      height: 100vh;
      overflow: hidden;
    }

    #menu {
      position: absolute;
      top: 10px;
      left: 10px;
      background: rgba(34, 34, 34, 0.85);
      border: 1px solid #555;
      border-radius: 8px;
      padding: 20px;
      min-width: 300px;
      text-align: center;
      cursor: move;
      z-index: 1000;
    }

    #menu input {
      width: 90%;
      padding: 6px;
      border-radius: 4px;
      border: 1px solid #555;
      margin-bottom: 10px;
      background: #111;
      color: #fff;
    }

    #menu button {
      display: block;
      width: 90%;
      margin: 6px auto;
      padding: 8px 0;
      border: none;
      border-radius: 6px;
      background: #0f0;
      font-weight: bold;
      cursor: pointer;
    }

    #gameFrame {
      position: absolute;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      border: none;
      z-index: 0;
    }
  </style>
</head>
<body>

  <div id="menu">
    <label>Redirect link:</label><br>
    <input type="text" id="linkInput" placeholder="https://example.com"><br>
    <button id="saveBtn">Save Link</button>
    <hr>
    <button id="osuBtn">ðŸŽµ Play Web Osu Mania</button>
    <button id="clusterBtn">ðŸ¦– Play Cluster Rush</button>
    <button id="soundboardBtn">ðŸ”Š Play Soundboard</button>
    <button id="openLinkBtn">âž¡ Go to Saved Link</button>
  </div>

  <iframe id="gameFrame" src=""></iframe>

  <script>
    const linkInput = document.getElementById("linkInput");
    const saveBtn = document.getElementById("saveBtn");
    const osuBtn = document.getElementById("osuBtn");
    const clusterBtn = document.getElementById("clusterBtn");
    const soundboardBtn = document.getElementById("soundboardBtn");
    const openLinkBtn = document.getElementById("openLinkBtn");
    const gameFrame = document.getElementById("gameFrame");

    // Load saved redirect link
    linkInput.value = localStorage.getItem("redirectLink") || "https://classroom.google.com/h";

    saveBtn.onclick = () => {
      const link = linkInput.value.trim();
      if (link) {
        localStorage.setItem("redirectLink", link);
        alert("âœ… Link saved!");
      }
    };

    // Load games in iframe (no new tabs)
    osuBtn.onclick = () => {
      gameFrame.src = "https://hectickiwi.github.io/Web-Osu-Mania/?v=" + new Date().getTime();
    };

    clusterBtn.onclick = () => {
      gameFrame.src = "https://swordslasher.com/games/cluster-rush/game.html?v=" + new Date().getTime();
    };

    soundboardBtn.onclick = () => {
      gameFrame.src = "https://special-scarlet-yijlvuwhem.edgeone.app/?v=" + new Date().getTime();
    };

    openLinkBtn.onclick = () => {
      const link = localStorage.getItem("redirectLink") || "https://classroom.google.com/h";
      gameFrame.src = link + "?v=" + new Date().getTime();
    };

    // Redirect key
    document.addEventListener("keydown", function(event) {
      if (event.key === ">") {
        const link = localStorage.getItem("redirectLink") || "https://classroom.google.com/h";
        gameFrame.src = link + "?v=" + new Date().getTime();
      }
    });

    // --- Draggable menu ---
    let menu = document.getElementById('menu');
    let isDragging = false;
    let offsetX = 0;
    let offsetY = 0;

    menu.addEventListener('mousedown', function(e) {
      isDragging = true;
      offsetX = e.clientX - menu.offsetLeft;
      offsetY = e.clientY - menu.offsetTop;
      menu.style.cursor = 'grabbing';
    });

    document.addEventListener('mousemove', function(e) {
      if (!isDragging) return;
      let left = e.clientX - offsetX;
      let top = e.clientY - offsetY;

      left = Math.max(0, Math.min(left, window.innerWidth - menu.offsetWidth));
      top = Math.max(0, Math.min(top, window.innerHeight - menu.offsetHeight));

      menu.style.left = left + 'px';
      menu.style.top = top + 'px';
    });

    document.addEventListener('mouseup', function() {
      if (!isDragging) return;
      isDragging = false;
      menu.style.cursor = 'move';

      // Snap to nearest edge
      const menuRect = menu.getBoundingClientRect();
      const middleX = window.innerWidth / 2;
      const middleY = window.innerHeight / 2;

      let snapLeft = (menuRect.left + menuRect.width / 2 < middleX) ? 10 : window.innerWidth - menu.offsetWidth - 10;
      let snapTop = (menuRect.top + menuRect.height / 2 < middleY) ? 10 : window.innerHeight - menu.offsetHeight - 10;

      menu.style.left = snapLeft + 'px';
      menu.style.top = snapTop + 'px';
    });
  </script>

</body>
</html>
